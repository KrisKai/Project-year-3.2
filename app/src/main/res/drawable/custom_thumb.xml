<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle" >
            <size android:height="18dp"
                android:width="18dp"/>
            <solid android:color="#CDD2D6"/>
            <corners android:radius="20dp"/>
            <stroke android:color="#77B2D9"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
            <size android:height="18dp"
                android:width="18dp"/>
            <solid android:color="#77B2D9"/>
            <corners android:radius="20dp"/>
            <stroke android:color="#CDD2D6"
                android:width="2dp"/>
        </shape>
    </item>

</selector>